generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt
  email       String   @unique
  password    String

  staff   Staff   @relation(fields: [email], references: [email], onDelete: Cascade)
  staffId String  @unique @db.ObjectId
}

model Staff {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt
  firstName   String
  lastName    String
  middleName  String?
  email       String   @unique
  avatar      String?
  location    String?
  birthday    DateTime?

  account Account?
}
